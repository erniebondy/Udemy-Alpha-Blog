<h1 class= "m-4">Log in</h1>

<div class="container">
  
  <%# We need to specify where the form will be submitted %>
  <%# The 'login_path' is defined in your routes and uses the 'post' request %>
  <%= form_with( scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info-subtle rounded", local: true, data: { turbo: false } ) do |f| %>

    <div class="form-group row mb-2">
      <%= f.label :username, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :username, class: "form-control shadow", placeholder: "Enter a username" %>
      </div>
    </div>

    <div class="form-group row mb-2">
      <%= f.label :password, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.password_field :password, class: "form-control shadow", placeholder: "Enter your password" %>
      </div>
    </div>

    <div class="form-group row m-4 justify-content-center">
      <%= f.submit "Log in", class: "btn btn-info col-3 shadow-sm" %>
    </div>

  <% end %>

  <%= link_to "[ Cancel and return to Article listing ]", articles_path, class: "text-info" %>

  
</div>