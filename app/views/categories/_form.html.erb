<%= form_with( model: @category, class: "shadow p-3 mb-3 bg-info-subtle rounded", 
              local: true, data: { turbo: false } ) do |f| %>

  <div class="form-group row mb-2">
    <%= f.label :name, "Category Name", class: "col-2 col-form-label" %>
    <div class="col-8">
      <%= f.text_field :name, class: "form-control shadow", 
                        placeholder: "Enter a category name" %>
    </div>
  </div>

  <div class="form-group row m-4 justify-content-center">
    <%= f.submit(@category.new_record? ? "Add category" : "Update category", class: "btn btn-info col-3 shadow-sm") %>
  </div>

<% end %>