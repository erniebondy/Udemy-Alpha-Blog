<h1 class="m-4">Categories</h1>

<div class="m-4">
  <%= will_paginate @categories %>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-2">
        <div class="card text-center shadow mb-4 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            <% if logged_in? && current_user.admin? %>
              <%= link_to "Edit", edit_category_path(category), method: :edit, class: "btn btn-info" %>
              <%#= link_to "Delete", article_path(article), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago, 
            edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="m-4">
  <%= will_paginate @categories %>
</div>