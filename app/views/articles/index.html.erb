<h1 class= "m-1">All articles</h1>

<div class="container">
  <% @articles.each do |a| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow">
          <div class="card-header fst-italic">
            by <%= a.user.username %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to a.title, article_path(a), class: "text-success" %></h5>
            <p class="card-text text-start"><%= truncate(a.description, length: 100) %></p>
            <%= link_to "View", article_path(a), class: "btn btn-primary" %>
            <%= link_to "Edit", edit_article_path(a), method: :edit, class: "btn btn-info" %>
            <%= link_to "Delete", article_path(a), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </div>
          <div class="card-footer text-body-secondary">
            <small>Created <%= time_ago_in_words(a.created_at) %> ago, 
            Edited <%= time_ago_in_words(a.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>