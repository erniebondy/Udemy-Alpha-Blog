<div class="container">
  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from beaing saved:</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <% ## Make sure to use '%=' when rendering to screen! %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with( model: @article, class: "shadow p-3 mb-3 bg-info-subtle rounded", local: true, data: { turbo: false } ) do |f| %>

    <div class="form-group row">
      <%= f.label :title, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :title, class: "form-control shadow", placeholder: "Title of Article" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :description, rows: 8, class: "form-control shadow", placeholder: "Description of Article" %>
      </div>
    </div>

    <div class="form-group row m-4 justify-content-center">
      <%= f.submit class: "btn btn-info col-3 shadow-sm" %>
    </div>

  <% end %>

  <%= link_to "[ Cancel and return to Article listing ]", articles_path, class: "text-info" %>
</div>